---
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  // Zenn„ÅÆarticles„Éá„Ç£„É¨„ÇØ„Éà„É™„Åã„ÇâÂÖ®„Å¶„ÅÆMarkdownÊäïÁ®ø„ÇíÂèñÂæó
  const posts = import.meta.glob('../../../articles/*.md', { eager: true });
  
  return Object.entries(posts).map(([path, post]) => {
    const slug = path.split('/').pop()?.replace('.md', '') || '';
    return {
      params: { slug },
      props: { post, slug },
    };
  });
}

const { post, slug } = Astro.props;
const { Content } = post;
---

<Layout title={`${post.frontmatter.title} | WISDOM Blog`}>
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <span class="emoji">{post.frontmatter.emoji || 'üìù'}</span>
        <span class="type">{post.frontmatter.type}</span>
      </div>
      
      <h1>{post.frontmatter.title}</h1>
      
      <div class="post-info">
        <time>{post.frontmatter.published_at}</time>
        <div class="topics">
          {post.frontmatter.topics?.map((topic: string) => (
            <span class="topic-tag">{topic}</span>
          ))}
        </div>
      </div>
    </header>
    
    <div class="post-content">
      <Content />
    </div>
    
    <footer class="post-footer">
      <p>
        <a href="/">‚Üê „Éñ„É≠„Ç∞‰∏ÄË¶ß„Å´Êàª„Çã</a>
      </p>
      
      <div class="zenn-link">
        <p>„Åì„ÅÆË®ò‰∫ã„ÅØ<a href={`https://zenn.dev/daideguchi/articles/${slug}`} target="_blank" rel="noopener">Zenn</a>„Åß„ÇÇÂÖ¨Èñã„Åï„Çå„Å¶„ÅÑ„Åæ„Åô</p>
      </div>
