---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="開発ログ自動記事化ブログ" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <h1><a href="/">WISDOM Blog</a></h1>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; 2025 WISDOM Blog. Powered by Astro + Zenn Connect</p>
    </footer>
  </body>
</html>

<style>
  body {
    font-family: system-ui, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
  }
  
  header {
    background: #2563eb;
    color: white;
    padding: 1rem;
  }
  
  header h1 a {
    color: white;
    text-decoration: none;
  }
  
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: calc(100vh - 200px);
  }
  
  footer {
    background: #f3f4f6;
    padding: 1rem;
    text-align: center;
    color: #6b7280;
  }
</style>